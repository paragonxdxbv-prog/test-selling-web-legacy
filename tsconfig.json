{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "Bundler",
		"outDir": "public/assets/js",
		"rootDir": "src",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"lib": ["ES2020", "DOM"],
		"allowJs": false,
		"resolveJsonModule": true,
		"esModuleInterop": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "api"]
}
